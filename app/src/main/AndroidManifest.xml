        <activity android:name=".inflate.activity.InflateTestActivity" />
        <activity android:name=".zoom.activity.ZoomImageActivity" />
        <activity android:name=".zoom.activity.ImageTypeActivity" />
        <activity android:name=".zoom.activity.WideImageActivity" />
        <activity android:name=".bezier.activity.Circle2HeartActivity" />
        <activity android:name=".loading.activity.LoadingActivity" />
        <activity android:name=".shape.actvity.ShapeActivity" />
        <activity
            android:name=".activity.PhotoViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/myTransparent" />
        <activity android:name=".activity.CheckViewActivity"></activity>
    </application>

</manifest>